<div class="sinupPage">
  <div class="titleArea">
    <h1><span class="title_al">新規アカウント登録</span></h1>
    <%= render "devise/shared/links" %>
  </div><br>
  <div class='container'>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "mt-5, signupForm" }) do |f| %>
      <%= devise_error_messages %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control", placeholder: "名前を入力してください" %>
      </div>
      <div class="form-group">
         <%= f.label :email %>
        <%= f.email_field :email, class: "form-control", placeholder: "emailを入力してください" ,autocomplete: "email" %>
      </div>
      <div class="form-group">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %>文字以上入力してください)</em>
        <% end %><br />
        <%= f.password_field :password, class: "form-control", placeholder:"パスワードを入力してください", autocomplete: "off" %>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, class:"form-control", placeholder: "パスワードを再度入力してください", autocomplete: "off" %>
      </div><br><br>
      <div class="text-center">
        <%= f.submit "アカウント登録", class: "btn btn-success btn-lg" %><br><br><br><br>
      </div>
    <% end %>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group text-center">
        <%= link_to "会員ログイン", new_session_path(resource_name), class: "btn btn-primary btn-lg" %>&nbsp;&nbsp;&nbsp;
        <%= f.hidden_field :email, value: "tester@example.jp" %>
        <%= f.hidden_field :password, value: "tester" %>
        <%= f.submit "簡単ログイン", class: "btn btn-warning btn-lg"%>
      </div>
    <% end %><br><br>
  </div>
  <div class="copyright">&nbsp;&nbsp;© TaskBoard</div>
</div>